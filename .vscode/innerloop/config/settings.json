{
    "$schema": "../../../documentation/schema.json",
    "CollectionRuleDefaults": {
        "Actions": {
            "Egress": "artifacts"
        }
    },
    "DefaultProcess": {
        "Filters": [
            {
                "ProcessName": "Mvc"
            }
        ]
    },
    "DiagnosticPort": {
        "ConnectionMode": "Listen",
        "EndpointName": "diag.sock"
    },
    "InProcessFeatures": {
        "Enabled": true,
        "ParameterCapturing": {
            "Enabled": true
        },
        "Exceptions": {
            "Enabled": false
        },
        "CallStacks": {
            "Enabled": false
        }
    },
    "Egress": {
        "FileSystem": {
            "artifacts": {
                "DirectoryPath": "./artifacts",
                "IntermediateDirectoryPath": "./intermediateArtifacts"
            }
        }
    }
}